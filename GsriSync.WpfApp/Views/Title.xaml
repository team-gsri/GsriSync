<UserControl x:Class="GsriSync.WpfApp.Views.Title"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GsriSync.WpfApp.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
        <Button Margin="20" Command="{Binding UninstallCommand}" Style="{StaticResource Small}" Click="Button_Click">
            <Button.Background>
                <SolidColorBrush Color="Coral" Opacity=".7" />
            </Button.Background>
            <Label HorizontalAlignment="Center" FontSize="24pt">×</Label>
        </Button>
    </StackPanel>
</UserControl>
